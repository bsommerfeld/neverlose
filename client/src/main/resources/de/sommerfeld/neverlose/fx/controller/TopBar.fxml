<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<HBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER_LEFT" spacing="10" styleClass="top-search-bar"
      prefHeight="40.0" xmlns="http://javafx.com/javafx/21"
      stylesheets="/de/sommerfeld/neverlose/fx/css/style.css"
      HBox.hgrow="ALWAYS"
      fx:controller="de.sommerfeld.neverlose.fx.controller.TopBarController">
    <padding>
        <Insets top="5" right="10" bottom="5" left="10"/>
    </padding>

    <Region HBox.hgrow="ALWAYS"/>

    <TextField fx:id="searchTextField" promptText="Search plans..." HBox.hgrow="NEVER" prefWidth="400.0"
               styleClass="search-field"/>
    <Region HBox.hgrow="ALWAYS"/>

    <Button fx:id="createNewPlanButton" text="+ New Plan" styleClass="new-plan-button" mnemonicParsing="false"
            onAction="#onNewPlan"/>

</HBox>