<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.shape.SVGPath?>
<HBox xmlns:fx="http://javafx.com/fxml/1" styleClass="footer-bar"
      stylesheets="/de/bsommerfeld/neverlose/fx/css/style.css"
      HBox.hgrow="ALWAYS"
      fx:controller="de.bsommerfeld.neverlose.fx.controller.BottomBarController"
      xmlns="http://javafx.com/javafx/17.0.12">

    <Hyperlink text="%fxml.bottomBar.sommerfeld" styleClass="footer-label" onAction="#handleSommerfeldLink"/>

    <Region HBox.hgrow="ALWAYS"/>

    <!-- Right-aligned GitHub CTA as Hyperlink: icon at the far right; expands left on hover -->
    <HBox alignment="CENTER_RIGHT" spacing="6">
        <Hyperlink fx:id="githubCta" onAction="#handleSommerfeldLink" styleClass="github-cta">
            <graphic>
                <HBox alignment="CENTER_RIGHT" spacing="0">
                    <!-- Expanding text container (placed before icon to expand leftwards while keeping icon at the right edge) -->
                    <HBox fx:id="githubCtaText" alignment="CENTER_RIGHT" spacing="5" styleClass="github-cta-text">
                        <Label text="Support The Project With A"/>
                        <!-- Golden Star SVG -->
                        <SVGPath
                                content="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"
                                style="-fx-fill: -accent-gold;"
                                scaleX="0.7" scaleY="0.7"/>
                        <Label text="!"/>
                    </HBox>
                    <!-- GitHub icon (Octocat mark) pinned to the far right -->
                    <SVGPath fx:id="githubIcon"
                             content="M8 0C3.58 0 0 3.58 0 8a8 8 0 0 0 5.47 7.59c.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.19 0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8z"
                             style="-fx-fill: #24292f;"
                             scaleX="1.25" scaleY="1.25"/>
                </HBox>
            </graphic>
        </Hyperlink>
    </HBox>
</HBox>
