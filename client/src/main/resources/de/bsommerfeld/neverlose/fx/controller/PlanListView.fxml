<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
            fx:controller="de.bsommerfeld.neverlose.fx.controller.PlanListViewController"
            styleClass="plan-list-view-background">
    <children>
        <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="plan-list-scroll-pane"
                    AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">
            <FlowPane fx:id="planFlowPane" hgap="15.0" vgap="15.0" styleClass="plan-list-flow-pane"
                      alignment="TOP_LEFT" prefWrapLength="800.0">
                <padding>
                    <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
                </padding>
            </FlowPane>
        </ScrollPane>
    </children>
</AnchorPane>
