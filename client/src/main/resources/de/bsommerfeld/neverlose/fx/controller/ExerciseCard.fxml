<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox fx:id="rootPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
     fx:controller="de.bsommerfeld.neverlose.fx.controller.ExerciseCardController"
     styleClass="template-card" onMouseClicked="#handleCardClick">

    <HBox styleClass="template-card-header">
        <Button fx:id="deleteButton" text="-" styleClass="delete-template-button" 
                onAction="#handleDeleteButtonClick" />
    </HBox>

    <Label fx:id="templateNameLabel" styleClass="template-name" />
</VBox>
