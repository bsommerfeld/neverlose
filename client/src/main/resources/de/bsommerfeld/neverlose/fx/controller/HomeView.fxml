<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
           styleClass="plan-list-view-background" stylesheets="/de/bsommerfeld/neverlose/fx/css/style.css"
           fx:controller="de.bsommerfeld.neverlose.fx.controller.HomeViewController">

    <VBox alignment="CENTER" spacing="20">
        <padding>
            <Insets top="50" right="50" bottom="50" left="50"/>
        </padding>

        <Text styleClass="title-text" text="Neverlose Training Plans"/>
        <Text styleClass="subtitle-text" text="Manage your training plans with ease"/>

        <HBox alignment="CENTER" spacing="30">
            <padding>
                <Insets top="30" right="0" bottom="0" left="0"/>
            </padding>

            <Button fx:id="showPlansButton" text="Show Plans" onAction="#handleShowPlans"
                    styleClass="editor-action-button" prefWidth="200" prefHeight="60"/>

            <Button fx:id="newPlanButton" text="New Plan" onAction="#handleNewPlan"
                    styleClass="editor-action-button" prefWidth="200" prefHeight="60"/>
        </HBox>
    </VBox>
</StackPane>